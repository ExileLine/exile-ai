ENV=development
DB_BACKEND=mysql
SECRET_KEY=please-change-me
DEBUG=True
RUN_HOST=0.0.0.0
RUN_PORT=7777
SENSITIVE_HEADERS=authorization,cookie,set-cookie,x-api-key

MYSQL_HOSTNAME=127.0.0.1
MYSQL_USERNAME=root
MYSQL_PASSWORD=your-password
MYSQL_PORT=3306
MYSQL_DATABASE=database-name

POSTGRESQL_HOSTNAME=127.0.0.1
POSTGRESQL_USERNAME=postgres
POSTGRESQL_PASSWORD=your-password
POSTGRESQL_PORT=15432
POSTGRESQL_DATABASE=database-name

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PWD=your-password
REDIS_DB=0
DECODE_RESPONSES=True

# Celery (默认不填会复用 Redis 配置)
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
CELERY_TASK_QUEUE=exile_scenario_tasks

# LLM
LLM_TIMEOUT_SECONDS=90
LLM_DEV_PROVIDER=deepseek
LLM_DEV_MODEL=deepseek-chat
LLM_PROD_PROVIDER=openai
LLM_PROD_MODEL=gpt-4o-mini
LLM_DEFAULT_TEMPERATURE=0.2
LLM_MAX_HISTORY_MESSAGES=40
LLM_MAX_TOOL_STEPS=4
LLM_RATE_LIMIT_ENABLE=True
LLM_RATE_LIMIT_REQUESTS_PER_MINUTE=20
LLM_RATE_LIMIT_REQUESTS_PER_DAY=500
LLM_TOKEN_QUOTA_PER_DAY=200000
LLM_MEMORY_ENABLE=True
LLM_MEMORY_SUMMARY_TRIGGER_MESSAGES=24
LLM_MEMORY_KEEP_RECENT_MESSAGES=12
LLM_MEMORY_SUMMARY_MAX_CHARS=2000
LLM_AUTO_FALLBACK_ENABLE=True
LLM_FALLBACK_PROVIDERS=deepseek,openai,gemini
LLM_ORCHESTRATOR=legacy
LLM_AGENT_MAX_STEPS=8
LLM_AGENT_APPROVAL_MODE=manual
LLM_AGENT_CHECKPOINT_BACKEND=db

DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

GEMINI_API_KEY=
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai
GEMINI_MODEL=gemini-2.0-flash

EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
